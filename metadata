name: twincan
version: 1.0.0
release: 1
maintainer: JP-Makers
email: contact@jp-makers.com
description: Twincan is a simple file manager for the terminal
arch: ["x86_64"]
url: https://github.com/JP-Makers/twincan
license: MIT
alpm_depends: ["qt6-base"]
deb_depends: ["qt6-base-dev"]
rpm_depends: ["qt6-qtbase-gui"]
provides: ["twincan"]
conflicts: ["twincan"]
sources: ["https://github.com/JP-Makers/twincan/releases/download/v1.0.0/TwinCAN.tar.gz"]
sha256sums: ["a31c61e733ae21eaa645de0e870c03d4fdb812c7e5a0a5666ef229ceba7fa8f4"]

appimage_exec: "/usr/bin/TwinCAN"

appimage_desktop: {
    install -m644 "TwinCAN/TwinCAN.desktop"
}

appimage_icon: {
    install -m644 "TwinCAN/TwinCAN.svg"
}

package: {
    install -m755 "TwinCAN/TwinCAN" to "/usr/bin/"
    install -m644 "TwinCAN/TwinCAN.desktop" to "/usr/share/applications/"
    install -m644 "TwinCAN/TwinCAN.svg" to "/usr/share/icons/TwinCAN/"
    install -m644 "TwinCAN/LICENSE" to "/usr/share/licenses/twincan/"
}
